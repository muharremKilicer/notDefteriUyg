<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.java2.notdefteriuyg.Giris">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtSifreGiris"
        android:hint="Şifrenizi Giriniz"
        android:layout_above="@+id/btnGiris"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="Giriş Yap"
        android:id="@+id/btnGiris"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:onClick="fncGiris" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="Şifremi Unuttum"
        android:id="@+id/btnSifre"
        android:layout_below="@+id/btnGiris"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:onClick="fncSifreSoru" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sifirla"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="SIFIRLA"
        android:id="@+id/btnSifirla"
        android:layout_below="@+id/sifirla"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="iptal"
        android:id="@+id/btnİptal"
        android:layout_below="@+id/btnSifirla"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp" />
</RelativeLayout>
